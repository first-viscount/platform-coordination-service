# Development environment variables for platform-coordination-service

# Database
DATABASE_URL=postgresql+asyncpg://coordination_user:coordination_dev_password@localhost:5432/platform_coordination
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Service configuration
SERVICE_NAME=platform-coordination-service
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Security (use proper secrets in production)
SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8081"]

# Rate limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60